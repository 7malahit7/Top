WindowManager:
    Menu:
    VolonterScreen1:
    UserScreen1:
    UserScreen2:

<Menu>:
    name: "menu"
    Image:
        source:'images\\MenuBackground.png'
    BoxLayout:
        orientation: 'vertical'
        
        AnchorLayout:
            Image:
                anchor_x: 'center' 
                anchor_y: 'top'
                source: 'images\\Logo.png'
                size: 562,586
                size_hint: .7,.7
     
        AnchorLayout:
            padding: (0,200,0,0)           
            Button:     
                background_normal: 'images\\VolonterButton.png'
                background_down: 'images\\VolonterButtonDown.png'
                size: 576,178
                size_hint: .2,None
                anchor_x: 'center'
                anchor_y: 'bottom'
                

                on_release: 
                    app.root.current = "volonterScreen1"
                    root.manager.transition.direction = "left"
        AnchorLayout:
            padding: (0,0,0,100)  
            Button:   
                background_normal: 'images\\UserButton.png'     
                background_down: 'images\\UserButtonDown.png'
                size: 576,178
                anchor_x:'center'
                anchor_y:'top'
                size_hint: .2,None
                 
                on_release: 
                    app.root.current = "userScreen1"
                    root.manager.transition.direction = "left"


<VolonterScreen1>:
    name: "volonterScreen1"

    BoxLayout:
        orientation:'vertical'
        AnchorLayout:       
            Image:
                source:'images\\VolonterScreen.png'
                size_hint: None,None
                size: 700,450

        AnchorLayout:
            Image:
                source: 'images\\AdressFalse.png'
                size_hint: None,None
                size: 610,240
                anchor_x: 'center'
                anchor_y: 'top'
        AnchorLayout:
            Image:
                source: 'images\\AdressFalse.png'
                size_hint: None,None
                size: 610,240
                anchor_x: 'center'
                anchor_y: 'center'
        AnchorLayout:
            Image:
                source: 'images\\AdressTrue.png'
                size_hint: None,None
                size: 610,240
                anchor_x: 'center'
                anchor_y: 'bottom'
    
    


<UserScreen1>:
    name: 'userScreen1'
    Image:
        source: 'images\\userScreen1.png'
    BoxLayout:
        orientation:'vertical'
        AnchorLayout:
            padding:(200,400,0,0)
            Button:
                background_normal: 'images\\userButton1_1.png'
                background_down: 'images\\userButton1_1.png'
                on_release: 
                    app.root.current = "userScreen2"
                    root.manager.transition.direction = "left"
                anchor_x:'center'
                anchor_y:'right'
                size: 635,155
                size_hint: None,None

<UserScreen2>:
    name: 'userScreen2'
    Image:
        source: 'images\\userScreen2.png'
    BoxLayout:
        orientation:'vertical'
        AnchorLayout:
            Image:
                anchor_x: 'center'
                anchor_y: 'top'
                source:'images\\ClearEarth.png'
                size_hint:None,None
                size: 500,400
        BoxLayout:
            orientation: 'vertical'
            AnchorLayout:
                Camera:
                    id:camera
                    resolution: -1,-1
                    play: False
                    anchor_x: 'center'
                    anchor_y: 'top'
            AnchorLayout:    
                Button:
                    background_normal:'images\\CameraIcon.png'
                    background_down: 'images\\CameraIcon.png'
                    size_hint:None,None
                    size:210,217
                    anchor_x: 'center'
                    anchor_y: 'bottom'
                    on_press: camera.play = True
            
