WindowManager:
    Menu:
    Volonter1:

<Menu>:
    name: "menu"
    BoxLayout:
        orientation: 'vertical'
        AnchorLayout:
            Image:
                anchor_x: 'center' 
                anchor_y: 'top'
                source: 'images\\Logo.png'
                size_hint: .5,.5        
        BoxLayout:
            orientation: 'vertical'
            spacing: 40
            padding: 100,50
            
            
            Button:     
                background_normal: 'images\\UserButton.png'
                background_down: 'images\\UserButtonDown.png'
                size_hint: 1,1
                on_release: 
                    app.root.current = "v1"
                    root.manager.transition.direction = "left"
            Button:   
                background_normal: 'images\\VolonterButton.png'     
                background_down: 'images\\VolonterButtonDown.png'   
                size_hint: 1,1
                on_release: 
                    app.root.current = "v1"
                    root.manager.transition.direction = "left"


<Volonter1>:
    name: "v1"

    BoxLayout:
        Button:
            text: "Back"
            font_size: 30
            on_release: 
                app.root.current = "menu"
                root.manager.transition.direction = "right"
