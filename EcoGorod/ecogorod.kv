WindowManager:
    Menu:
    VolonterScreen1:
    UserScreen1:

<Menu>:
    name: "menu"
    BoxLayout:
        Image:
            source:'images\\MenuBackground.png'
    BoxLayout:
        orientation: 'vertical'
        AnchorLayout:
            Image:
                anchor_x: 'center' 
                anchor_y: 'top'
                source: 'images\\Logo.png'
                size: 562,586
                size_hint: .7,.7
     
        FloatLayout:
            size:200,200
            Button:     
                background_normal: 'images\\VolonterButton.png'
                background_down: 'images\\VolonterButtonDown.png'
                size: 576,178
                size_hint: .2,.3
                pos: 1920 - 1920/2-576/3,150
                on_release: 
                    app.root.current = "volonterScreen1"
                    root.manager.transition.direction = "left"
            Button:   
                background_normal: 'images\\UserButton.png'     
                background_down: 'images\\UserButtonDown.png'
                size: 576,178
                pos: 1920 - 1920/2-576/3, 298
                size_hint: .2,.3
                 
                on_release: 
                    app.root.current = "userScreen1"
                    root.manager.transition.direction = "left"


<VolonterScreen1>:
    name: "volonterScreen1"

    BoxLayout:
        Button:
            text: "Back"
            font_size: 30
            on_release: 
                app.root.current = "menu"
                root.manager.transition.direction = "right"


<UserScreen1>:
    name: 'userScreen1'
    BoxLayout:
        Image:
            source: 'images\\userScreen1.png'
        FloatLayout:
        
            Button:
                background_normal: 'images\\userButton1_1.png'
                background_down: 'images\\userButton1_1.png'
                pos: 350,220
                size: 576,178
                size_hint: .2,.3
                
